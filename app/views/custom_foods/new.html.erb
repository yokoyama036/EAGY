<%= form_with(model: @custom_food, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true, id: 'custom_food_name' %>
  </div>
  <%= link_to 'AIで栄養素を取得', '#', class: 'btn btn-secondary', id: 'fetch-nutrient-data' %>
  <div id="loader-bg" class="is-hide">
    <div id="loader" class="is-hide">
        <p>
          <div class="ball-pulse"><div></div><div></div><div></div></div>
        </p>
    </div>
</div>
  <div class="form-group">
    <%= form.label :calorie %>
    <%= form.number_field :calorie, step: "any", class: 'form-control', min: 0, required: true, id: 'custom_food_calorie' %>
  </div>

  <div class="form-group">
    <%= form.label :protein %>
    <%= form.number_field :protein, step: "any", class: 'form-control', min: 0, required: true, id: 'custom_food_protein' %>
  </div>

  <div class="form-group">
    <%= form.label :carbo %>
    <%= form.number_field :carbo, step: "any", class: 'form-control', min: 0, required: true, id: 'custom_food_carbo' %>
  </div>

  <div class="form-group">
    <%= form.label :fat %>
    <%= form.number_field :fat, step: "any", class: 'form-control', min: 0, required: true, id: 'custom_food_fat' %>
  </div>

  <div class="form-group">
    <%= form.label :salt %>
    <%= form.number_field :salt, step: "any", class: 'form-control', min: 0, required: true, id: 'custom_food_salt' %>
  </div>

  <div class="form-group">
    <%= form.label :unit %>
    <%= form.text_field :unit, step: "any", class: 'form-control', required: true, id: 'custom_food_unit' %>
  </div>

  <div class="form-group">
    <%= form.submit '登録', step: "any", class: 'btn btn-primary' %>
  </div>
<% end %>
